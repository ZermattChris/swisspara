---
const { name = "My Name", stars = 5 } = Astro.props;
---

<div class="mx-auto max-w-2xl px-2 py-12">
  <div class="mt-0 lg:col-span-7">
    <div class="flow-root">
      <div
        class="-my-12 divide-y divide-gray-200 bg-white/90 rounded sm:rounded-lg shadow-md border border-amber-700/50"
      >
        <div class="py-4 px-3 text-sm">
          <div class="flex items-center">
            <!-- <img
                src="https://images.unsplash.com/photo-1502685104226-ee32379fefbe?ixlib=rb-=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=facearea&facepad=8&w=256&h=256&q=80"
                alt="Emily Selman."
                class="h-12 w-12 rounded-full"
              /> -->

            <div class="ml-4">
              <div id="stars" class="mt-1 flex items-center">
                <!-- Active: "text-yellow-400", Default: "text-gray-300" -->
                <h4
                  class="text-base font-bold text-gray-900 text-left mr-2 relative -bottom-0.5"
                >
                  {name}
                </h4>

                {
                  Array.from({ length: stars }, (_, i) => (
                    <svg
                      class="h-5 w-5 flex-shrink-0 text-yellow-400 stroke-yellow-600"
                      viewBox="0 0 20 20"
                      fill="currentColor"
                      aria-hidden="true"
                      data-slot="icon"
                    >
                      <path
                        fill-rule="evenodd"
                        d="M10.868 2.884c-.321-.772-1.415-.772-1.736 0l-1.83 4.401-4.753.381c-.833.067-1.171 1.107-.536 1.651l3.62 3.102-1.106 4.637c-.194.813.691 1.456 1.405 1.02L10 15.591l4.069 2.485c.713.436 1.598-.207 1.404-1.02l-1.106-4.637 3.62-3.102c.635-.544.297-1.584-.536-1.65l-4.752-.382-1.831-4.401Z"
                        clip-rule="evenodd"
                      ></path>
                    </svg>
                  ))
                }
              </div>
            </div>
          </div>

          <div class="mt-2 mx-4 space-y-6 text-left italic text-gray-600">
            <slot />
          </div>


        </div>
      </div>
    </div>
  </div>
</div>

<style>
  #stars svg {
    filter: drop-shadow(0 0 4px rgba(255, 255, 255, 1));
  }
</style>
